<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductionsetqtnFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/productionsetqtn_appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appbarcolor"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/styleoftextinappbar"
                android:text="@string/production_set_qtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/basketcode_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        style="@style/styleoftext"
        android:text="@string/basket_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productionsetqtn_appbar"

        />
    <EditText
        android:id="@+id/basketcode_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintStart_toStartOf="@id/basketcode_txt"
        app:layout_constraintTop_toBottomOf="@id/basketcode_txt"
        android:background="@drawable/edt_bg"
        />
    <ImageView
        android:id="@+id/basketbarcode_img"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/basketcode_edt"
        android:src="@drawable/barcodel"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/child_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/child"
        style="@style/styleoftextbold"
        app:layout_constraintStart_toStartOf="@id/basketcode_txt"
        app:layout_constraintTop_toBottomOf="@id/basketcode_edt"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shasah"
        android:layout_marginStart="2dp"
        style="@style/styleoftext"
        app:layout_constraintStart_toEndOf="@id/child_txt"
        app:layout_constraintTop_toTopOf="@id/child_txt"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/jobordernum_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/child_txt"
        app:layout_constraintStart_toStartOf="@id/child_txt"
        android:layout_marginTop="20dp"
        android:text="@string/job_order_number_txt"
        style="@style/styleoftextbold"
        />
    <TextView
        android:id="@+id/jobordernum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        style="@style/styleoftext"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/jobordernum_txt"
        app:layout_constraintStart_toEndOf="@id/jobordernum_txt"
        />
    <TextView
        android:id="@+id/basketquantity_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        style="@style/styleoftext"
        android:text="@string/basket_qtn_edt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jobordernum_txt"
        />
    <EditText
        android:id="@+id/basketquantity_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintStart_toStartOf="@id/basketquantity_txt"
        app:layout_constraintTop_toBottomOf="@id/basketquantity_txt"
        android:background="@drawable/edt_bg"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_btn"
        android:layout_width="170dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basketquantity_edt"
        android:backgroundTint="@color/appbarcolor"
        app:cornerRadius="8dp"
        android:text="@string/save"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        />





</androidx.constraintlayout.widget.ConstraintLayout>