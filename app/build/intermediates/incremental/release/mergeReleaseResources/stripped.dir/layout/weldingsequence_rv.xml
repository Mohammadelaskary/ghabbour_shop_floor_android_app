<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:id="@+id/sequencenum_checkBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:padding="8dp"
        style="@style/styleoftext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/childdesc"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/sequencenum_checkBox"
        app:layout_constraintTop_toTopOf="@id/sequencenum_checkBox"
        app:layout_constraintEnd_toStartOf="@+id/loadingqty"
        android:layout_marginStart="80dp"
        android:text="@string/childdesc_txt"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        style="@style/styleoftext"
        />
    <TextView
        android:id="@+id/loadingqty"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/childdesc"
        app:layout_constraintEnd_toStartOf="@id/jobordername"
        app:layout_constraintTop_toTopOf="@id/childdesc"
        android:text="250"
        android:layout_marginStart="50dp"
        android:textSize="16sp"
        style="@style/styleoftext"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/jobordername"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/loadingqty"
        app:layout_constraintTop_toTopOf="@id/childdesc"
        app:layout_constraintEnd_toStartOf="@id/joborderquantity"

        android:text="250"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        style="@style/styleoftext"
        />
    <TextView
        android:id="@+id/joborderquantity"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/jobordername"
        app:layout_constraintTop_toTopOf="@id/childdesc"
        app:layout_constraintEnd_toStartOf="@+id/status"
        android:text="250"
        android:layout_marginStart="60dp"
        android:textSize="16sp"
        style="@style/styleoftext"
        android:layout_marginTop="10dp"
        />



    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/childdesc"
        app:layout_constraintStart_toEndOf="@+id/joborderquantity"
        android:layout_marginStart="10dp"

        android:layout_marginTop="10dp"
        android:text="ok"
        android:textSize="16sp"
        style="@style/styleoftext"
        />


</androidx.constraintlayout.widget.ConstraintLayout>