<androidx.cardview.widget.CardView
    android:id="@+id/mainimportcard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
       <TextView
           android:id="@+id/jobordernum_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:text="@string/job_order_name_txt"
           android:layout_marginTop="15dp"
           android:layout_marginStart="15dp"
           style="@style/styleoftextbold"
           />
        <TextView
            android:id="@+id/jobordername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/jobordernum_txt"
            app:layout_constraintStart_toStartOf="@id/jobordernum_txt"
            app:layout_constraintEnd_toEndOf="@id/jobordernum_txt"
            android:layout_marginTop="5dp"
            android:text="15"
            style="@style/styleoftext"
            />
        <TextView
            android:id="@+id/sequence_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:text="@string/sequence"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            style="@style/styleoftextbold"
            />
        <TextView
            android:id="@+id/sequence_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sequence_txt"
            app:layout_constraintStart_toStartOf="@id/sequence_txt"
            app:layout_constraintEnd_toEndOf="@id/sequence_txt"
            android:layout_marginTop="5dp"
            android:text="1"
            style="@style/styleoftext"
            />
        <TextView
            android:id="@+id/child_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/jobordername"
            app:layout_constraintStart_toStartOf="@id/jobordernum_txt"
            app:layout_constraintEnd_toEndOf="@id/jobordernum_txt"            android:text="Child"
            android:layout_marginTop="5dp"
            style="@style/styleoftextbold"
            />
        <TextView
            android:id="@+id/child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/child_txt"
            app:layout_constraintStart_toStartOf="@id/child_txt"
            app:layout_constraintEnd_toEndOf="@id/child_txt"
            android:layout_marginTop="3dp"
            android:text="motor"
            style="@style/styleoftext"
            />
        <TextView
            android:id="@+id/jobordreqtn_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sequence_num"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Job order Qtn"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            style="@style/styleoftextbold"
            />
        <TextView
            android:id="@+id/jobordreqtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/jobordreqtn_txt"
            app:layout_constraintStart_toStartOf="@id/jobordreqtn_txt"
            app:layout_constraintEnd_toEndOf="@id/jobordreqtn_txt"
            android:layout_marginTop="5dp"
            android:text="150"
            style="@style/styleoftext"
            />
        <TextView
            android:id="@+id/nextoper_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/child"
            app:layout_constraintStart_toStartOf="@id/jobordernum_txt"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:text="Next operation"
            style="@style/styleoftextbold"
            />
        <TextView
            android:id="@+id/nextoper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nextoper_txt"
            app:layout_constraintStart_toStartOf="@id/nextoper_txt"
            app:layout_constraintEnd_toEndOf="@id/nextoper_txt"
            android:layout_marginTop="5dp"
            android:text="paint"
            style="@style/styleoftext"
            />
        <TextView
            android:id="@+id/loadingqtn_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/jobordreqtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Loading Qtn"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            style="@style/styleoftextbold"
            />
        <TextView
            android:id="@+id/loadingqtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/loadingqtn_txt"
            app:layout_constraintStart_toStartOf="@id/loadingqtn_txt"
            app:layout_constraintEnd_toEndOf="@id/jobordreqtn_txt"
            android:layout_marginTop="5dp"
            android:text="250"
            style="@style/styleoftext"
            />
























    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
