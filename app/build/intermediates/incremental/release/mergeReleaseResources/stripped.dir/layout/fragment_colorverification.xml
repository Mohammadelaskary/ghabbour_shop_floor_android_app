<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Paint.ColorverificationFragment"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/colorver_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/styleoftextinappbar"
        android:text="@string/color_verification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colorver_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/basketcode_edt"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:hint="Item code"
                app:errorEnabled="true"
                app:errorTextColor="@android:color/holo_red_dark"
                app:hintTextColor="@color/colorPrimary"
                app:startIconDrawable="@drawable/ic_barcode_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:imeOptions="actionGo"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/parent_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parent"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="@id/basketcode_edt"
                app:layout_constraintTop_toBottomOf="@id/basketcode_edt"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/parentdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toEndOf="@id/parent_txt"
                app:layout_constraintTop_toTopOf="@id/parent_txt"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/parentcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toStartOf="@id/parentdesc"
                app:layout_constraintTop_toBottomOf="@+id/parentdesc"
                />
            <TextView
                android:id="@+id/operation_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/parentcode"
                app:layout_constraintStart_toStartOf="@id/parent_txt"
                android:layout_marginTop="20dp"
                android:text="@string/operation_txt"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/operation_txt"
                app:layout_constraintStart_toEndOf="@id/operation_txt"
                />
            <TextView
                android:id="@+id/jobordername_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/operation_txt"
                app:layout_constraintStart_toStartOf="@id/basketcode_edt"
                android:layout_marginTop="20dp"
                android:text="@string/job_order_number_txt"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/jobordername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/jobordername_txt"
                app:layout_constraintStart_toEndOf="@id/jobordername_txt"
                />
            <TextView
                android:id="@+id/color_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                style="@style/styleoftextbold"
                android:text="Color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/jobordername_txt"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/color_spin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="@id/color_txt"
                app:layout_constraintTop_toBottomOf="@id/color_txt"
                style="@style/SpinnerTheme"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:layout_width="170dp"
                android:layout_height="55dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/color_spin"
                android:backgroundTint="@color/appbarcolor"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                app:cornerRadius="25dp"
                android:text="@string/save"
                style="@style/styleoftextinbtn"

                />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>