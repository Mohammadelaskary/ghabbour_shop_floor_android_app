    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="@string/sequence_num"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:gravity="end"/>
        <TextView
            android:id="@+id/sequence_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            style="@style/details_text_style"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/child_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/child_"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="end"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/parent_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            style="@style/child_parent_desc_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/remaining_qty"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="end"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"           />
        <TextView
            android:id="@+id/remaining_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            style="@style/details_text_style"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/joborderqtn_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/job_order_qty"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="end"/>
        <TextView
            android:id="@+id/job_order_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            style="@style/details_text_style"/>
    </LinearLayout>


</LinearLayout>