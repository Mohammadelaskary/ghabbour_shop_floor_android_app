<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    >
    <TextView
    android:id="@+id/child_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/child"
    style="@style/styleoftextbold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    />

    <TextView
        android:id="@+id/childdesc"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/childdesc_txt"
        android:layout_marginStart="5dp"
        style="@style/styleoftext"
        app:layout_constraintStart_toEndOf="@id/child_txt"
        app:layout_constraintTop_toTopOf="@id/child_txt"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/defectqty_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defected_qty"
        style="@style/styleoftextbold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/child_txt"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/defectqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:layout_marginStart="5dp"
        style="@style/styleoftext"
        app:layout_constraintStart_toEndOf="@id/defectqty_txt"
        app:layout_constraintTop_toTopOf="@id/defectqty_txt"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/defectname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defect_name_txt"
        style="@style/styleoftextbold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/defectqty_txt"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/defectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defect 1"
        android:layout_marginStart="5dp"
        style="@style/styleoftext"
        app:layout_constraintStart_toEndOf="@id/defectname_txt"
        app:layout_constraintTop_toTopOf="@id/defectname_txt"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/requiredqtn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="@style/styleoftextbold"
        android:text="Repaired Qty"
        app:layout_constraintStart_toStartOf="@id/defectname_txt"
        app:layout_constraintTop_toBottomOf="@id/defectname_txt"
        />
    <EditText
        android:id="@+id/requiredqtn_edt"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintStart_toStartOf="@id/requiredqtn_txt"
        app:layout_constraintTop_toBottomOf="@id/requiredqtn_txt"
        android:background="@drawable/edt_bg"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/notes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/styleoftextbold"
        android:text="@string/notes"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/requiredqtn_txt"
        app:layout_constraintTop_toBottomOf="@id/requiredqtn_edt"/>
    />
    <EditText
        android:id="@+id/notes_edt"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/notes_txt"
        app:layout_constraintTop_toBottomOf="@id/notes_txt"
        android:background="@drawable/edt_bg"
        android:textColor="@color/black"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_btn"
        android:layout_width="100dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/notes_edt"
        app:layout_constraintEnd_toStartOf="@id/save_btn"
        android:layout_marginTop="5dp"
        android:backgroundTint="#122455"
        app:cornerRadius="25dp"
        android:text="@string/save"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="normal"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/close_btn"
        android:layout_width="100dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="@id/save_btn"
        android:backgroundTint="#122455"
        app:cornerRadius="25dp"
        android:text="@string/close"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textStyle="normal"

        />










</androidx.constraintlayout.widget.ConstraintLayout>