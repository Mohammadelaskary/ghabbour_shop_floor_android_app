<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Manfacturing.scrapmanagment.MainScrapmanagment"
    android:background="@drawable/background">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/newrequest_btn"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/appbarcolor"
        app:cornerRadius="25dp"
        android:text="@string/new_request"
        style="@style/styleoftextinbtn"
        android:visibility="gone"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/assignedrequest"
        android:layout_width="240dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newrequest_btn"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/appbarcolor"
        app:cornerRadius="25dp"
        android:text="@string/assigned_requests"
        style="@style/styleoftextinbtn"

        />





</androidx.constraintlayout.widget.ConstraintLayout>