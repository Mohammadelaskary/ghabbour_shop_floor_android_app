<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleoftextinappbar" >
        <item name="android:textSize">@dimen/appbar_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#122455</item>
        <item name="android:textStyle">bold</item>



    </style>
    <style name="styleoftextbold">
        <item name="android:textColor">#122455</item>
        <item name="android:textSize">@dimen/black_text_size</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="alerter_text_appearance">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="style_of_text_bold">
        <item name="android:textColor">#122455</item>
        <item name="android:textSize">@dimen/black_text_size</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="styleoftext" >
        <item name="android:textSize">@dimen/text_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#484848</item>
    </style>
    <style name="details_text_style">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_details</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="basket_code_style">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/done</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="qty_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/done</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="styleoftextinbtn" >
    <item name="android:textSize">@dimen/appbar_text_size</item>
    <item name="textAllCaps">false</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textStyle">bold</item>
    </style>
    <style name="child_parent_desc_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/done</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="defect_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/done</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="operation_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#E53935</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="job_order_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#8E24AA</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_drop</item>
    </style>

    <style name="MainTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/cairo_regular</item>
    </style>

    <style name="LanguageButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
    </style>
    <style name="MenuButton" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>




</resources>