<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".qualityFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/quality_appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appbarcolor"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/styleoftextinappbar"
                android:text="Quality Control"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/basketcode_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        style="@style/styleoftext"
        android:text="@string/basket_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quality_appbar"
        />
    <EditText
        android:id="@+id/basketcode_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintStart_toStartOf="@id/basketcode_txt"
        app:layout_constraintTop_toBottomOf="@id/basketcode_txt"
        android:background="@drawable/edt_bg"
        />
    <ImageView
        android:id="@+id/basketbarcode_img"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/basketcode_edt"
        android:src="@drawable/barcodel"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/operation_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/basketcode_edt"
        app:layout_constraintStart_toStartOf="@id/basketcode_txt"
        android:layout_marginTop="20dp"
        android:text="@string/operation_txt"
        style="@style/styleoftextbold"
        />
    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paint"
        style="@style/styleoftext"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/operation_txt"
        app:layout_constraintStart_toEndOf="@id/operation_txt"
        />
    <TextView
        android:id="@+id/child_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Child : "
        style="@style/styleoftextbold"
        app:layout_constraintStart_toStartOf="@id/operation_txt"
        app:layout_constraintTop_toBottomOf="@id/operation_txt"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111512"
        android:layout_marginStart="2dp"
        style="@style/styleoftext"
        app:layout_constraintStart_toEndOf="@id/child_txt"
        app:layout_constraintTop_toTopOf="@id/child_txt"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/childname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shasah"
        android:layout_marginTop="10dp"
        style="@style/styleoftext"
        app:layout_constraintStart_toStartOf="@id/child"
        app:layout_constraintTop_toBottomOf="@+id/child"
        />
    <TextView
        android:id="@+id/qtn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qtns : "
        style="@style/styleoftextbold"
        app:layout_constraintStart_toStartOf="@id/operation_txt"
        app:layout_constraintTop_toBottomOf="@id/childname"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="580"
        android:layout_marginStart="2dp"
        style="@style/styleoftext"
        app:layout_constraintStart_toEndOf="@id/qtn_txt"
        app:layout_constraintTop_toTopOf="@id/qtn_txt"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/samplesize_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        style="@style/styleoftextbold"
        android:text="Sample size"
        app:layout_constraintStart_toStartOf="@id/qtn_txt"
        app:layout_constraintTop_toBottomOf="@id/qtn_txt"
        />
    <EditText
        android:id="@+id/length_edt"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/samplesize_txt"
        app:layout_constraintTop_toBottomOf="@id/samplesize_txt"
        android:background="@drawable/edt_bg"
        android:textAlignment="center"
        android:inputType="number"
        />
    <TextView
        android:id="@+id/delefectdqtn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        style="@style/styleoftextbold"
        android:text="Delefects Qtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qtn_txt"
        />
    <EditText
        android:id="@+id/delefectqtn_edt"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/delefectdqtn_txt"
        app:layout_constraintStart_toStartOf="@id/delefectdqtn_txt"
        android:background="@drawable/edt_bg"
        android:inputType="number"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_btn"
        android:layout_width="170dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delefectdqtn_txt"
        android:backgroundTint="@color/appbarcolor"
        app:cornerRadius="8dp"
        android:text="Add Defects"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        />








</androidx.constraintlayout.widget.ConstraintLayout>